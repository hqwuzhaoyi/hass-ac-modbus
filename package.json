{
  "name": "hass-ac-modbus",
  "version": "1.0.0",
  "packageManager": "pnpm@8.6.2",
  "description": "Home Assistant Air Conditioning Modbus Integration with Next.js Monitor",
  "main": "server.ts",
  "scripts": {
    "dev": "turbo run dev:web dev:ws --parallel",
    "dev:web": "next dev -p 3002",
    "dev:ws": "npm run ws:dev",
    "build": "next build",
    "start": "next start -p 3002",
    "lint": "next lint",
    "ws": "ts-node --transpile-only --compiler-options '{\"module\":\"commonjs\",\"moduleResolution\":\"node\"}' server.ts",
    "ws:dev": "nodemon --watch server.ts --watch lib --ext ts,js --exec \"ts-node --transpile-only --compiler-options '{\\\"module\\\":\\\"commonjs\\\",\\\"moduleResolution\\\":\\\"node\\\"}' server.ts\"",
    "full": "npm run dev",
    "scan": "node -r ts-node/register lib/modbus-scanner.ts",
    "scan:smart": "node -r ts-node/register scripts/smart-scan.ts scan",
    "scan:stats": "node -r ts-node/register scripts/smart-scan.ts stats",
    "scan:compare": "node -r ts-node/register scripts/smart-scan.ts compare",
    "bridge": "node -r ts-node/register lib/mqtt-bridge.ts",
    "monitor": "npm run ws",
    "test": "jest"
  },
  "keywords": ["homeassistant", "modbus", "air-conditioning", "mqtt", "nextjs", "typescript"],
  "author": "hqwuzhaoyi",
  "license": "MIT",
  "dependencies": {
    "next": "14.0.0",
    "react": "^18",
    "react-dom": "^18",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.292.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "recharts": "^2.8.0",
    "modbus-serial": "^8.0.17",
    "mqtt": "^5.3.4",
    "ws": "^8.14.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3",
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/ws": "^8.5.10",
    "autoprefixer": "^10.0.1",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "eslint": "^8",
    "eslint-config-next": "14.0.0",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "ts-node": "^10.9.1",
    "turbo": "^2.0.6"
  },
  "optionalDependencies": {
    "pcap": "^3.0.0"
  }
}
